<%= form_for :account, url: "/accounts"  do |f| %>

 <fieldset>

  <legend>create new account</legend>

  <label>account name</label>
  <%= f.text_field :name, :autofocus => true %><br />

  <label>account number</label>
  <%= f.text_field :number %><br />
  <label>parent account</label>
  <%= autofill_inputs "account", nil, "account" %><br />


 </fieldset>

 <fieldset>
  <label for="init">opening balance</label>
  <input name="init" class="money" />
  <label for="date">as of</label>
  <input name="date" id="date" />
 </fieldset>

  <%= f.submit :id => "post", :value => "create account" %>

<% end %>

<%= link_to 'Back', accounts_path %>

