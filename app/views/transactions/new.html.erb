
<%= form_for :transaction, url: "/transactions" do |f| %>

 <fieldset id="pos">

  <label for="date">date</label>
  <%= f.text_field :date, :id => "date" %><br />
  <!--
   For input elements for foreign key properties, the actual Rails input
   element (that will be included in params) is a hidden element, so the
   autocomplete element for user input can display "friendly" names instead of
   numeric keys.
  -->
  <label>other party to transaction</label>
  <input data-value="entity_value" data-source="<%= entities_path(:json) %>">
  <%= f.text_field :entity_id, :id => "entity_value", :type => "hidden" %>
  <!--
   the "new_button" class pertains to those inputs for which a new instance of
   a model referenced by the transaction model may be needed.
  -->
  <button type="button" id="new_entity" class="new_button">+</button>

 </fieldset>

 <fieldset id="payments">
  <fieldset class="payment_method">
   <!-- account -->
   <!-- amount -->
  </fieldset>
  <button type="button">additonal payment method</button>
 </fieldset>

 <fieldset id="purchases">
 </fieldset>

<% end %>

