<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>transaction</th>
      <th>item</th>
      <th>price</th>
      <th>qty</th>
      <th>debit?</th>
      <th>net</th>
      <th>account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td>
          <%= entry.transaktion_id %>
        </td>
        <td><%= Item.find(entry.item_id).gendesc if entry.item_id %></td>
        <td><%= entry.price %></td>
        <td><%= entry.qty %></td>
        <td><%= entry.is_debit %></td>
        <td><%= "%.2f"%entry.net_amt %></td>
        <td><%= Account.find(entry.account_id).account_pathname if entry.account_id%></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

